{
    "manifest_version": 3,
    "name": "Website Productivity Analyzer",
    "version": "1.0.0",
    "description": "Track and analyze your website usage to boost productivity.",
    "permissions": [
        "tabs",
        "storage",
        "idle",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html"
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}